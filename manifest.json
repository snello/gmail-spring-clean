{
  "manifest_version": 3,
  "name": "Gmail Domain Stats",
  "version": "0.1.0",
  "description": "List the inbox domains with the most emails and optionally trash a domain.",
  "permissions": ["identity", "storage", "tabs"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://www.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Domain Stats"
  },
  "background": {
    "service_worker": "background.js"
  },
  "oauth2": {
    "client_id": "566925973229-hse23hod7hr9ulnf7q7cguqa98cti3r3.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/gmail.modify"]
  }
}
